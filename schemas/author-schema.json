{
	"$id": "https://github.com/resonite-modding-group/resonite-mod-manifest/blob/master/schemas/author-schema.json",
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"required": [
		"author"
	],
	"additionalProperties": false,
	"properties": {
		"author": {
			"type": "object",
			"minProperties": 1,
			"patternProperties": {
				".*": {
					"type": "object",
					"description":"Author name",
					"required": [
						"url"
					],
					"additionalProperties": false,
					"properties": {
						"url": {
							"type": "string",
							"description":"Link to your github or author page",
							"format": "uri"
						},
						"icon": {
							"type": "string",
							"description":"Profile icon",
							"format": "uri"
						},
						"website": {
							"type": "string",
							"description":"Link to a personal website",
							"format": "uri"
						},
						"support": {
							"type": "string",
							"description":"Link for where users can support your work, such as ko-fi/patreon",
							"format": "uri"
						}
					}
				}
			}
		}
	}
}
